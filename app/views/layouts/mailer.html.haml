%body{style: '-webkit-font-smoothing: antialiased; height: 100%; line-height: 1.6; background-color: #f6f6f6;'}
  %table{style: 'width: 100%;'}
    %tr
      %td{style: 'vertical-align: top;'}
        %td{style: 'display: block !important; max-width: 508px !important; margin: 0 auto !important; clear: both !important;'}
          %content{style: 'max-width: 600px; margin: 0 auto; display: block; padding: 20px; font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 14px;'}
            %table{style: 'background: #fff; border: 1px solid #e9e9e9; border-radius: 3px;'}
              %tr
                %td{style: 'background: #1ab394; font-size: 16px; color: #fff; font-weight: 500; padding: 20px; text-align: center; border-radius: 3px 3px 0 0;'}
                  = I18n.t('emails.company_name')
              %tr
                %td{style: 'padding: 20px;'}
                  = yield
            .footer{style: 'width: 100%; clear: both; color: #999; padding: 20px;'}
              %table{:width => "100%"}
                %tr
                  %td= I18n.t('emails.copyrigth')

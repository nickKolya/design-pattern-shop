%p= I18n.t('devise_views.forgot_password.change_password')
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  .text-danger
    = devise_error_messages!
  = f.hidden_field :reset_password_token
  .form-group
    = f.password_field :password, placeholder: :new_password, required: true, class: 'form-control'
  .form-group
    = f.password_field :password_confirmation, placeholder: :password_confirmation, required: true, class: 'form-control'
  = f.submit I18n.t('devise_views.forgot_password.change_password'), class: 'btn btn-primary block full-width m-b'
  = render "devise/shared/links"

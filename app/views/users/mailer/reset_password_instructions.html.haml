%table{width: '100%', cellpadding: '0', cellspacing: '0', style: 'margin: 0; font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif; box-sizing: border-box; font-size: 14px; display: table-row-group;'}
  %tr{style: 'vertical-align: inherit; border-color: inherit;'}
    %td{style: 'padding: 0 0 20px; vertical-align: top;'}
      = I18n.t('reset_password.hello', email: @resource.email)
  %tr
    %td{style: 'padding: 0 0 20px; vertical-align: top;'}
      = I18n.t('reset_password.someone_requested')
  %tr
    %td{style: 'padding: 0 0 20px; vertical-align: top;'}
      = link_to I18n.t('reset_password.link_label'), edit_password_url(@resource, reset_password_token: @token), style: 'text-decoration: none; color: #FFF; background-color: #1ab394; border: solid #1ab394; border-width: 5px 10px; line-height: 2; font-weight: bold; text-align: center; cursor: pointer; display: inline-block; border-radius: 5px; text-transform: capitalize;'
  %tr
    %td{style: 'padding: 0 0 20px; vertical-align: top;'}
      = I18n.t('reset_password.not_you')
  %tr
    %td{style: 'padding: 0 0 20px; vertical-align: top;'}
      = I18n.t('reset_password.ignore')
